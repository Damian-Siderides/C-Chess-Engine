#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>


void move(int turn);
void printBoard();
void initBoard();
int gameOver();

char board[8][8];
int x = 0;
int y = 0;
int m = 0;
int n = 0;

int turnNum = 0;



int main() {

	initBoard();
	printBoard();

	while (5 == 5) {
		move(0);
		move(1);
	}
	
//how to define a move

	/*
		Rules

		en passant, stalemate, check, checkmate, castling

		1. Is move out of bounds?
		2. Is it your piece to move?
		3. 

		4. Is move legal for the piece

		3. Are you in check
	*/

}
void move(int turn) {
	scanf(" %d", &x);
	scanf(" %d", &y);
	scanf(" %d", &m);
	scanf(" %d", &n);

	if (x > 8 || x < 1 || y > 8 
	 || y < 1 || m > 8 || m < 1 
			  || n > 8 || n < 1) {

		printf("Coordinates out of bounds\n");
	} else if (isupper(board[y - 1][x - 1]) == turn){

			printf("Yo you tried to move the wrong piece");

		} else {
		board[n - 1][m - 1] = board[y - 1][x - 1];
		board[y - 1][x - 1] = ' ';
		printBoard();
		turnNum++;
	}
}

void initBoard() {
	for (int i = 0; i < 8; i++) {
		board[1][i] = 'P';
		board[6][i] = 'p';
	}
	for (int i = 2; i < 6; i++) {
		for (int j = 0; j < 8; j++) {
			board[i][j] = ' ';
		}
	}

		board[0][0] = 'R';
		board[0][7] = 'R';

		board[7][0] = 'r';
		board[7][7] = 'r';

		board[0][1] = 'N';
		board[0][6] = 'N';

		board[7][1] = 'n';
		board[7][6] = 'n';

		board[0][2] = 'B';
		board[0][5] = 'B';

		board[7][2] = 'b';
		board[7][5] = 'b';

		board[0][3] = 'Q';
		board[0][4] = 'K';

		board[7][3] = 'q';
		board[7][4] = 'k';
}

void printBoard() {
	for (int i = 0; i < 8; i++) {
		printf("%d", i + 1);
		for (int j = 0; j < 8; j++) {
			printf("%c", board[i][j]);
		}
		printf("\n");
	}
	printf(" ");
	for (int i = 0; i < 8; i++) {
		printf("%d", i + 1);
	}
	printf("\n\n");
}

int gameOver() {



}
